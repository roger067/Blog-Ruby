<%= form_for @post do |f|%>
    <% if @post.errors.any? %>
        <div class= "error">
            <h3><%= pluralize(@post.errors.count, "error") %> prevented this post from saving</h3>
            <ul>
                <% @post.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>
    <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body %>
    </div>
    <div class="form-group">
        <%= f.submit "Submit Post", class: "btn-submit" %>
    </div>
<% end %>