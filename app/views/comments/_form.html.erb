<%= form_for([@post, @post.comments.build]) do |f| %>
    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>
    <div class="form-group">
        <%= f.label :body, 'Your Comment' %>
        <%= f.text_area :body %>
    </div>
    <div class="form-group">
        <%= f.submit "Submit Comment", class: "btn-submit" %>
    </div>
<% end %>